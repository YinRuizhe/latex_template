	section = {
		name = {},%设置章节的名字。名字可以分为前后两部分
		nameformat={\kaishu},%用于控制章节名字的格式
		number = \Chinese{section},%\Roman \arabic \Chinese \alph 设置章节编号的数字输出格式
		numberformat={},% 选项用于控制章节编号的格式
		numbering = true,%控制是否对章节标题编号
		format= {\large\bfseries\centering},%这个变化就很多自由度很高
		aftername=\quad,%选项的参数 ⟨代码⟩ 将被插入到章节编号与其后的标题内容之间，用于控制格式变换。常用于控制章节编号与标题内容之间的距离，或者控制标题是否另起一行
