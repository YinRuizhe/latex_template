		%aftertitle={},%选项的参数 ⟨代码⟩ 将被插入到章节标题内容之后。
		runin=false,%用于确定标题与随后的正文是否排在同一段之上
		afterindent=true,%选项用于设置章节标题后首段的缩进
		beforeskip=3.5ex plus 1ex minus .2ex,%选项用于设置章节标题前的垂直间距
		afterskip=2.3ex plus .2ex,%选项控制章节标题与后面下方之间的距离
		indent=0pt,%选项用于设置章节标题本身的首行缩进
		hang = true,%选项用于设置是否对章节标题实施悬挂缩进（缩进的宽度为名字宽度和 indent 选项设置的宽度之和）。
		tocline =\CTEXnumberline{#1}#2,%选项用于定义章节标题在目录文件.toc的格式
		},
	subsection = {
		name = {},
		number = \thesubsection,
		numbering = true,
		format= \centering,
		titleformat={},
		aftertitle={},
		numberformat={},
		afterindent=true,
		},
	subsubsection = {
		name={},
	}
}

